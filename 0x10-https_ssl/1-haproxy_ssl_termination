# /etc/haproxy/haproxy.cfg

global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend www-frontend
    bind *:443 ssl crt /etc/letsencrypt/live/www.yourdomain.com/fullchain.pem
    reqadd X-Forwarded-Proto:\ https
    acl is_holberton path /
    use_backend www-backend if is_holberton

backend www-backend
    mode http
    server webserver1 web-01-ip:80 check
    server webserver2 web-02-ip:80 check

listen stats
    bind *:8080
    stats enable
    stats uri /
    stats realm HAProxy\ Statistics
    stats auth admin:yourpassword  # Change 'yourpassword' to a strong password

